#define F_CPU 16000000UL
#include <avr/io.h>
#include <avr/interrupt.h>
#include <util/delay.h>

ISR(INT0_vect) {
    PORTB ^= (1 << PB5);     
}

int main(void) {
    DDRB  |= (1 << PB5);     
    DDRD  &= ~(1 << PD2);    
    PORTD |= (1 << PD2);     

    // Falling-edge trigger on INT0 â†’ ISC01 = 1, ISC00 = 0
    EICRA = (1 << ISC01);
    EIMSK = (1 << INT0);     
    sei();                   

    while (1) {
        // do nothing, ISR toggles LED
    }
}