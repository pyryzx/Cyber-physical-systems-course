const int ledPin = 13;      
const int buttonPin = 2;    

volatile bool ledState = false;

void toggleLED() {
  ledState = !ledState;         
  digitalWrite(ledPin, ledState);
}

void setup() {
  pinMode(ledPin, OUTPUT);
  pinMode(buttonPin, INPUT_PULLUP);  
  attachInterrupt(digitalPinToInterrupt(buttonPin), toggleLED, FALLING);
}

void loop() {
}