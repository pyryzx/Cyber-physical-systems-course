#include <avr/io.h>
#include <avr/interrupt.h>

ISR(PCINT0_vect) {
    if (!(PINB & (1 << PB0))) {   
        PORTB ^= (1 << PB5);       
    }
}

int main(void) {
    DDRB  |= (1 << PB5);        
    DDRB  &= ~(1 << PB0);        
    PORTB |= (1 << PB0);          

    PCICR  |= (1 << PCIE0);        
    PCMSK0 |= (1 << PCINT0);       
    sei();

    while (1);
}